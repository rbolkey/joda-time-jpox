<?xml version="1.0"?>
<!DOCTYPE jdo PUBLIC "-//Sun Microsystems, Inc.//DTD Java Data Objects Metadata 2.0//EN"
        "http://java.sun.com/dtd/jdo_2_0.dtd">
<jdo>
    <package name="org.joda.time.contrib.datanucleus">
        <class name="JodaTimeEntity" identity-type="application">
            <inheritance strategy="new-table"/>
            <field name="id" primary-key="true" persistence-modifier="persistent"/>
            <field name="dateTime" persistence-modifier="persistent"/>
            <field name="dateTimeZone" persistence-modifier="persistent"/>
            <field name="duration" persistence-modifier="persistent"/>
            <field name="interval" persistence-modifier="persistent"/>
            <field name="localDate" persistence-modifier="persistent"/>
            <field name="localTime" persistence-modifier="persistent"/>
            <field name="period" persistence-modifier="persistent"/>
        </class>
    </package>
</jdo>